<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="SelectedPicksAndBans">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:onClick">selectOrClearHero</item>
        <item name="android:src">@drawable/hero_frame</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RecommendedPicksByPos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:onClick">selectHeroFromRecommendedPicks</item>
        <item name="android:src">@drawable/hero_frame</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RecommendedBansByPos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:onClick">selectHeroFromRecommendedBans</item>
        <item name="android:src">@drawable/hero_frame</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MainText">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>
