<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="SelectedPicksAndBans">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:onClick">selectHeroOrClear</item>
        <item name="android:src">@drawable/frame</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RecommendedPicksByPos">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:onClick">selectPickHeroWithPos</item>
        <item name="android:src">@drawable/frame</item>
    </style>

    <style name="RecommendedBansByPos">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:onClick">selectBanHeroWithPos</item>
        <item name="android:src">@drawable/frame</item>
    </style>
</resources>
