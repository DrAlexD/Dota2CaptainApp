<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SelectedPicks">
        <item name="android:layout_width">95dp</item>
        <item name="android:layout_height">95dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:onClick">selectHeroOrClear</item>
        <item name="android:src">@drawable/frame</item>
    </style>

    <style name="SelectedBans">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:onClick">selectHeroOrClear</item>
        <item name="android:src">@drawable/frame</item>
    </style>

    <style name="RecommendedPicksAndBansByPos">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:onClick">selectPickHeroWithPos</item>
        <item name="android:src">@drawable/frame</item>
    </style>
</resources>
