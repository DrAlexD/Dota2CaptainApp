<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/allyPickList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageAllyFirstPick"
            android:layout_width="95dp"
            android:layout_height="95dp"

            android:onClick="selectHeroOrClear"
            android:src="@drawable/frame"
            android:tag="1" />

        <ImageView
            android:id="@+id/imageAllySecondPick"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginTop="5dp"

            android:onClick="selectHeroOrClear"
            android:src="@drawable/frame"
            android:tag="2" />

        <ImageView
            android:id="@+id/imageAllyThirdPick"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginTop="5dp"

            android:onClick="selectHeroOrClear"
            android:src="@drawable/frame"
            android:tag="3" />

        <ImageView
            android:id="@+id/imageAllyFourthPick"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginTop="5dp"

            android:onClick="selectHeroOrClear"
            android:src="@drawable/frame"
            android:tag="4" />

        <ImageView
            android:id="@+id/imageAllyFifthPick"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginTop="5dp"

            android:onClick="selectHeroOrClear"
            android:src="@drawable/frame"
            android:tag="5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/allyBanList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/allyPickList"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageAllyFirstBan"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:onClick="selectHeroOrClear"

            android:src="@drawable/frame"
            android:tag="6" />

        <ImageView
            android:id="@+id/imageAllySecondBan"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"

            android:onClick="selectHeroOrClear"

            android:src="@drawable/frame"
            android:tag="7" />

        <ImageView
            android:id="@+id/imageAllyThirdBan"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"

            android:onClick="selectHeroOrClear"

            android:src="@drawable/frame"
            android:tag="8" />

        <ImageView
            android:id="@+id/imageAllyFourthBan"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"

            android:onClick="selectHeroOrClear"

            android:src="@drawable/frame"
            android:tag="9" />

        <ImageView
            android:id="@+id/imageAllyFifthBan"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"

            android:onClick="selectHeroOrClear"

            android:src="@drawable/frame"
            android:tag="10" />

        <ImageView
            android:id="@+id/imageAllySixthBan"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"

            android:onClick="selectHeroOrClear"

            android:src="@drawable/frame"
            android:tag="11" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/enemyPickList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageEnemyFirstPick"
            android:layout_width="95dp"
            android:layout_height="95dp"

            android:onClick="selectHeroOrClear"

            android:src="@drawable/frame"
            android:tag="12" />

        <ImageView
            android:id="@+id/imageEnemySecondPick"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginTop="5dp"

            android:onClick="selectHeroOrClear"

            android:src="@drawable/frame"
            android:tag="13" />

        <ImageView
            android:id="@+id/imageEnemyThirdPick"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginTop="5dp"

            android:onClick="selectHeroOrClear"

            android:src="@drawable/frame"
            android:tag="14" />

        <ImageView
            android:id="@+id/imageEnemyFourthPick"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginTop="5dp"

            android:onClick="selectHeroOrClear"

            android:src="@drawable/frame"
            android:tag="15" />

        <ImageView
