            android:layout_marginTop="5dp"

            android:onClick="selectHeroOrClear"

            android:src="@drawable/frame"
            android:tag="16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/enemyBanList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        app:layout_constraintRight_toLeftOf="@+id/enemyPickList"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageEnemyFirstBan"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:onClick="selectHeroOrClear"

            android:src="@drawable/frame"
            android:tag="17" />

        <ImageView
            android:id="@+id/imageEnemySecondBan"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"

            android:onClick="selectHeroOrClear"

            android:src="@drawable/frame"
            android:tag="18" />

        <ImageView
            android:id="@+id/imageEnemyThirdBan"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"

            android:onClick="selectHeroOrClear"

            android:src="@drawable/frame"
            android:tag="19" />

        <ImageView
            android:id="@+id/imageEnemyFourthBan"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"

            android:onClick="selectHeroOrClear"

            android:src="@drawable/frame"
            android:tag="20" />

        <ImageView
            android:id="@+id/imageEnemyFifthBan"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"

            android:onClick="selectHeroOrClear"

            android:src="@drawable/frame"
            android:tag="21" />

        <ImageView
            android:id="@+id/imageEnemySixthBan"
