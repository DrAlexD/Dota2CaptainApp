<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/allyPickList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageAllyFirstPick"
            style="@style/SelectedPicks"
            android:tag="1" />

        <ImageView
            android:id="@+id/imageAllySecondPick"
            style="@style/SelectedPicks"
            android:tag="2" />

        <ImageView
            android:id="@+id/imageAllyThirdPick"
            style="@style/SelectedPicks"
            android:tag="3" />

        <ImageView
            android:id="@+id/imageAllyFourthPick"
            style="@style/SelectedPicks"
            android:tag="4" />

        <ImageView
            android:id="@+id/imageAllyFifthPick"
            style="@style/SelectedPicks"
            android:tag="5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/allyBanList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="65dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/allyPickList"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageAllyFirstBan"
            style="@style/SelectedBans"
            android:tag="6" />

        <ImageView
            android:id="@+id/imageAllySecondBan"
            style="@style/SelectedBans"
            android:tag="7" />

        <ImageView
            android:id="@+id/imageAllyThirdBan"
            style="@style/SelectedBans"
            android:tag="8" />

        <ImageView
            android:id="@+id/imageAllyFourthBan"
            style="@style/SelectedBans"
            android:tag="9" />

        <ImageView
            android:id="@+id/imageAllyFifthBan"
            style="@style/SelectedBans"
            android:tag="10" />

        <ImageView
            android:id="@+id/imageAllySixthBan"
            style="@style/SelectedBans"
            android:tag="11" />
    </LinearLayout>

    <TextView
        android:id="@+id/picksWinRateDif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="50dp"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/enemyPickList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageEnemyFirstPick"
            style="@style/SelectedPicks"
            android:tag="12" />

        <ImageView
            android:id="@+id/imageEnemySecondPick"
            style="@style/SelectedPicks"
            android:tag="13" />

        <ImageView
            android:id="@+id/imageEnemyThirdPick"
            style="@style/SelectedPicks"
            android:tag="14" />

        <ImageView
            android:id="@+id/imageEnemyFourthPick"
            style="@style/SelectedPicks"
            android:tag="15" />

        <ImageView
            android:id="@+id/imageEnemyFifthPick"
            style="@style/SelectedPicks"
            android:tag="16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/enemyBanList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        app:layout_constraintRight_toLeftOf="@+id/enemyPickList"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageEnemyFirstBan"
            style="@style/SelectedBans"
            android:tag="17" />

        <ImageView
            android:id="@+id/imageEnemySecondBan"
            style="@style/SelectedBans"
            android:tag="18" />

        <ImageView
            android:id="@+id/imageEnemyThirdBan"
            style="@style/SelectedBans"
            android:tag="19" />

        <ImageView
            android:id="@+id/imageEnemyFourthBan"
            style="@style/SelectedBans"
            android:tag="20" />

        <ImageView
            android:id="@+id/imageEnemyFifthBan"
            style="@style/SelectedBans"
            android:tag="21" />

        <ImageView
            android:id="@+id/imageEnemySixthBan"
            style="@style/SelectedBans"
            android:tag="22" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>